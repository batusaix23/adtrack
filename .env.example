# ===========================================
# AGUADULCE TRACK - Environment Configuration
# ===========================================

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/aguadulce_track
DB_HOST=localhost
DB_PORT=5432
DB_NAME=aguadulce_track
DB_USER=postgres
DB_PASSWORD=password

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-refresh-token-secret-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Server Configuration
PORT=3001
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@aguadulcetrack.com

# Push Notifications (VAPID Keys)
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key
VAPID_EMAIL=mailto:admin@aguadulcetrack.com

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# Redis (optional - for session management)
REDIS_URL=redis://localhost:6379

# Logging
LOG_LEVEL=debug
